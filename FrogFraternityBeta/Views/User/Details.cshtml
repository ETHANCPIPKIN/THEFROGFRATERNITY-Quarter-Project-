@model FrogFraternityBeta.Models.User

@{ ViewData["Title"] = "Details"; }

<style>
    .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        float: left;
    }
</style>

<div>
    <img src=@Html.ValueFor(m => m.profilePic) class="avatar" alt="Avatar"> <p>   @Html.DisplayFor(m => m.UserName)</p> <br />
</div>

<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayNameFor(m => m.Email): @Html.DisplayFor(model => model.Email)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(m => m.fontColor): @Html.DisplayFor(model => model.fontColor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a> |
    <a asp-action="Index" asp-controller="Forum">Back</a>
</div>