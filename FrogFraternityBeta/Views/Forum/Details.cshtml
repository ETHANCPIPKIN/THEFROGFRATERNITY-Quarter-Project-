@model FrogFraternityBeta.Models.Post
@using Microsoft.AspNetCore.Http;

@{ ViewData["Title"] = "Post"; }

<h1 style="color:@Context.Session.GetString("color")">@Html.DisplayFor(model => model.Title)</h1>

<div>
    <h4 style="color:@Context.Session.GetString("color")">@Html.DisplayFor(model => model.Username)</h4>
    <p style="color:@Context.Session.GetString("color")">@Html.DisplayFor(model => model.PostTime)</p>
    <hr />
    <dl class="row">
        <dd class="col-sm-10" style="color:@Context.Session.GetString("color")">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
</div>
<div>
    @if (Context.Session.GetString("Username") == Model.Username)
    {
@Html.ActionLink("Edit", "Edit", new { id = Model.PostId }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = Model.PostId }) <br />            }
    <a asp-action="Index">Back to List</a>
</div>